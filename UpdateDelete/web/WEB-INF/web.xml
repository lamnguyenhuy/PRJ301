    </servlet>
    <servlet>
        <servlet-name>EmployeeFilterController</servlet-name>
        <servlet-class>controller.employee.EmployeeFilterController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>StudentCreateController</servlet-name>
        <servlet-class>controller.StudentCreateController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentCreateController</servlet-name>
        <url-pattern>/student/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>StudentLoadController</servlet-name>
        <servlet-class>controller.StudentLoadController</servlet-class>
    </servlet>
